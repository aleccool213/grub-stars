# frozen_string_literal: true

# Test environment Dockerfile
# Runs both the main API server AND the mock API server
# Mock server provides fake Yelp/Google/TripAdvisor responses

FROM ruby:3.3.6-slim

# Install dependencies
RUN apt-get update -qq && \
    apt-get install -y --no-install-recommends \
    build-essential \
    sqlite3 \
    libsqlite3-dev \
    pkg-config \
    curl && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy Gemfile first for layer caching
COPY Gemfile Gemfile.lock ./

# Install gems with bundler 2.5.23 (include dev/test for mock server)
RUN gem install bundler -v 2.5.23 && \
    bundle _2.5.23_ config set --local deployment true && \
    bundle _2.5.23_ install

# Copy application code
COPY . .

# Create data directory for SQLite database
RUN mkdir -p /data

# Environment variables
ENV RACK_ENV=production
ENV GRUB_STARS_CONFIG_DIR=/data

# Expose ports (9292 = main API, 4567 = mock server)
EXPOSE 9292

# Health check against main API
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s \
  CMD curl -f http://localhost:9292/health || exit 1

# Start script that runs both servers
COPY scripts/start-test.sh /start-test.sh
RUN chmod +x /start-test.sh

CMD ["/start-test.sh"]
